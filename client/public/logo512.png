<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="512" height="512">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#764ba2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#667eea;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="8" stdDeviation="16" flood-color="rgba(0,0,0,0.3)"/>
    </filter>
    <filter id="innerShadow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="3"/>
      <feOffset dx="2" dy="2" result="offset"/>
    </filter>
  </defs>
  
  <!-- 外层背景圆 -->
  <circle cx="256" cy="256" r="240" fill="url(#grad1)" filter="url(#shadow)"/>
  
  <!-- 内层装饰圆 -->
  <circle cx="256" cy="256" r="220" fill="none" stroke="white" stroke-width="4" opacity="0.2"/>
  <circle cx="256" cy="256" r="200" fill="none" stroke="white" stroke-width="2" opacity="0.3"/>
  
  <!-- 主聊天气泡 -->
  <rect x="100" y="140" width="312" height="200" rx="50" ry="50" fill="white" opacity="0.95" filter="url(#innerShadow)"/>
  
  <!-- AI机器人脸部特征 -->
  <!-- 左眼 -->
  <circle cx="180" cy="210" r="20" fill="#667eea"/>
  <circle cx="185" cy="205" r="8" fill="white"/>
  <circle cx="187" cy="203" r="4" fill="#667eea"/>
  
  <!-- 右眼 -->
  <circle cx="332" cy="210" r="20" fill="#667eea"/>
  <circle cx="337" cy="205" r="8" fill="white"/>
  <circle cx="339" cy="203" r="4" fill="#667eea"/>
  
  <!-- 嘴巴 - 微笑曲线 -->
  <path d="M200 270 Q256 290 312 270" stroke="#667eea" stroke-width="8" fill="none" stroke-linecap="round"/>
  
  <!-- 对话气泡装饰点 -->
  <circle cx="220" cy="300" r="4" fill="#764ba2" opacity="0.7"/>
  <circle cx="256" cy="305" r="4" fill="#764ba2" opacity="0.7"/>
  <circle cx="292" cy="300" r="4" fill="#764ba2" opacity="0.7"/>
  
  <!-- 小气泡装饰 -->
  <circle cx="380" cy="180" r="15" fill="white" opacity="0.8"/>
  <circle cx="390" cy="160" r="8" fill="white" opacity="0.6"/>
  <circle cx="395" cy="145" r="5" fill="white" opacity="0.4"/>
  
  <!-- 科技感装饰线条 -->
  <path d="M120 160 L140 160 M120 180 L135 180 M120 200 L130 200" stroke="#764ba2" stroke-width="3" opacity="0.5" stroke-linecap="round"/>
  <path d="M372 160 L392 160 M377 180 L392 180 M382 200 L392 200" stroke="#764ba2" stroke-width="3" opacity="0.5" stroke-linecap="round"/>
  
  <!-- 底部装饰波浪 -->
  <path d="M100 320 Q150 310 200 320 T300 320 T400 320" stroke="url(#grad2)" stroke-width="3" fill="none" opacity="0.6"/>
  
  <!-- 顶部装饰 -->
  <path d="M150 120 Q200 110 250 120 T350 120" stroke="white" stroke-width="2" fill="none" opacity="0.4"/>
  
  <!-- 外围光晕效果 -->
  <circle cx="256" cy="256" r="240" fill="none" stroke="url(#grad1)" stroke-width="8" opacity="0.3"/>
</svg>